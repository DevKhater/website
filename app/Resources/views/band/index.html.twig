{% extends 'base.html.twig' %}

{% block body %}
    <h1>Band list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td><a href="{{ path('band_show', { 'id': band.id }) }}">{{ band.id }}</a></td>
                <td>{{ band.title }}</td>
                <td>{{ band.genre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('band_show', { 'id': band.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('band_edit', { 'id': band.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('band_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
